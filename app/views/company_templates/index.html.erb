<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All companies
    </h1>

    <a href="/companies/new" class="btn btn-block btn-outline-secondary">
      Add a new company
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "company_templates/companies_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Photo
        </th>

        <th>
          Caption
        </th>

        <th>
          Title
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @companies.each do |company| %>
      <tr>
        <!-- Display company.id start -->
        <td>
          <%= company.id %>
        </td>
        <!-- Display company.id end -->

        <!-- Display company.photo start -->
        <td>
          <img src='<%= company.photo %>' class='img-fluid'>
        </td>
        <!-- Display company.photo end -->

        <!-- Display company.caption start -->
        <td>
          <%= company.caption %>
        </td>
        <!-- Display company.caption end -->

        <!-- Display company.title start -->
        <td>
          <%= company.title %>
        </td>
        <!-- Display company.title end -->

        <!-- Display company.created_at start -->
        <td>
          <%= time_ago_in_words(company.created_at) %> ago
        </td>
        <!-- Display company.created_at end -->

        <!-- Display company.updated_at start -->
        <td>
          <%= time_ago_in_words(company.updated_at) %> ago
        </td>
        <!-- Display company.updated_at end -->

        <td>
          <a href="/companies/<%= company.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @companies, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
