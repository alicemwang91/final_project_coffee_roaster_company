<%= search_form_for @q, :class => collapse_search_form, :id => "beans_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :origin_cont, "Origin contains" %>
    <%= f.text_field :origin_cont, :class => "form-control", :placeholder => "Origin contains" %>
  </div>

  <div class="form-group">
    <%= f.label :instruction_cont, "Instruction contains" %>
    <%= f.text_field :instruction_cont, :class => "form-control", :placeholder => "Instruction contains" %>
  </div>

  <div class="form-group">
    <%= f.label :precipitation_cont, "Precipitation contains" %>
    <%= f.text_field :precipitation_cont, :class => "form-control", :placeholder => "Precipitation contains" %>
  </div>

  <div class="form-group">
    <%= f.label :altitude, "Altitude" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :altitude_gteq, :class => "form-control", :placeholder => "Altitude greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :altitude_lteq, :class => "form-control", :placeholder => "Altitude less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :flavor_cont, "Flavor contains" %>
    <%= f.text_field :flavor_cont, :class => "form-control", :placeholder => "Flavor contains" %>
  </div>

  <div class="form-group">
    <%= f.label :process_method_cont, "Process method contains" %>
    <%= f.text_field :process_method_cont, :class => "form-control", :placeholder => "Process method contains" %>
  </div>

  <div class="form-group">
    <%= f.label :roast_cont, "Roast contains" %>
    <%= f.text_field :roast_cont, :class => "form-control", :placeholder => "Roast contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :recommended_machine_name_cont, "Machine name contains" %>
    <%= f.text_field :recommended_machine_name_cont, :class => "form-control", :placeholder => "Machine name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :tools_name_cont, "Tool name contains" %>
    <%= f.text_field :tools_name_cont, :class => "form-control", :placeholder => "Tool name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/beans" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#beans_filters">
  Show filters
</a>
