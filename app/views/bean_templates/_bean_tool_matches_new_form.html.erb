<!-- Form tool_match start -->
<form action="/create_tool_match_from_bean" method="post">
<!-- Form tool_match end -->

  <!-- Label and input for beans_id start -->
  <!-- Input for beans_id start -->
  <input type="hidden" name="beans_id" value="<%= @bean.id %>">
  <!-- Input for beans_id end -->

  <!-- Label and input for tools_id start -->
  <div class="form-group">
    <label for="tools_id">
      Tools
    </label>

    <!-- Input for tools_id start -->
    <%= select_tag(:tools_id, options_from_collection_for_select(Tool.all, :id, :name, @tool_match.tools_id), :class => "form-control") %>
    <!-- Input for tools_id end -->
  </div>
  <!-- Label and input for tools_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create tool match
  </button>
</form>
