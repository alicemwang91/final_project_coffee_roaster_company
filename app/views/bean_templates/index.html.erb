<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All beans
    </h1>

    <a href="/beans/new" class="btn btn-block btn-outline-secondary">
      Add a new bean
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Origin
        </th>

        <th>
          Roast
        </th>

        <th>
          Process method
        </th>

        <th>
          Flavor
        </th>

        <th>
          Altitude
        </th>

        <th>
          Precipitation
        </th>

        <th>
          Instruction
        </th>

        <th>
          Recommended machine
        </th>

        <th>
          Photo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @beans.each do |bean| %>
      <tr>
        <!-- Display bean.id start -->
        <td>
          <%= bean.id %>
        </td>
        <!-- Display bean.id end -->

        <!-- Display bean.origin start -->
        <td>
          <%= bean.origin %>
        </td>
        <!-- Display bean.origin end -->

        <!-- Display bean.roast start -->
        <td>
          <%= bean.roast %>
        </td>
        <!-- Display bean.roast end -->

        <!-- Display bean.process_method start -->
        <td>
          <%= bean.process_method %>
        </td>
        <!-- Display bean.process_method end -->

        <!-- Display bean.flavor start -->
        <td>
          <%= bean.flavor %>
        </td>
        <!-- Display bean.flavor end -->

        <!-- Display bean.altitude start -->
        <td>
          <%= bean.altitude %>
        </td>
        <!-- Display bean.altitude end -->

        <!-- Display bean.precipitation start -->
        <td>
          <%= bean.precipitation %>
        </td>
        <!-- Display bean.precipitation end -->

        <!-- Display bean.instruction start -->
        <td>
          <%= bean.instruction %>
        </td>
        <!-- Display bean.instruction end -->

        <!-- Display bean.recommended_machine_id start -->
        <td>
          <%= bean.recommended_machine_id %>
        </td>
        <!-- Display bean.recommended_machine_id end -->

        <!-- Display bean.photo start -->
        <td>
          <img src='<%= bean.photo %>' class='img-fluid'>
        </td>
        <!-- Display bean.photo end -->

        <!-- Display bean.created_at start -->
        <td>
          <%= time_ago_in_words(bean.created_at) %> ago
        </td>
        <!-- Display bean.created_at end -->

        <!-- Display bean.updated_at start -->
        <td>
          <%= time_ago_in_words(bean.updated_at) %> ago
        </td>
        <!-- Display bean.updated_at end -->

        <td>
          <a href="/beans/<%= bean.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
