<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Beans
        </th>

        <th>
          Tools
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @tool_matches.each do |tool_match| %>
      <tr>
        <!-- Display tool_match.id start -->
        <td>
          <%= tool_match.id %>
        </td>
        <!-- Display tool_match.id end -->

        <!-- Display tool_match.beans_id start -->
        <td>
          <%= tool_match.beans_id %>
        </td>
        <!-- Display tool_match.beans_id end -->

        <!-- Display tool_match.tools_id start -->
        <td>
          <%= tool_match.tools_id %>
        </td>
        <!-- Display tool_match.tools_id end -->

        <!-- Display tool_match.created_at start -->
        <td>
          <%= time_ago_in_words(tool_match.created_at) %> ago
        </td>
        <!-- Display tool_match.created_at end -->

        <!-- Display tool_match.updated_at start -->
        <td>
          <%= time_ago_in_words(tool_match.updated_at) %> ago
        </td>
        <!-- Display tool_match.updated_at end -->

        <td>
          <a href="/tool_matches/<%= tool_match.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
