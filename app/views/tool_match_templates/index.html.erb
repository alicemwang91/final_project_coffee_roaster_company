<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All tool matches
    </h1>

    <a href="/tool_matches/new" class="btn btn-block btn-outline-secondary">
      Add a new tool match
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "tool_match_templates/tool_matches_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Beans
        </th>

        <th>
          Tools
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @tool_matches.each do |tool_match| %>
      <tr>
        <td>
          <%= tool_match.id %>
        </td>

        <td>
          <% if tool_match.beans.present? %>
            <a href="/beans/<%= tool_match.beans.id %>">
              <%= tool_match.beans.origin %>
            </a>
          <% end %>
        </td>

        <td>
          <% if tool_match.tools.present? %>
            <a href="/tools/<%= tool_match.tools.id %>">
              <%= tool_match.tools.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(tool_match.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(tool_match.updated_at) %> ago
        </td>

        <td>
          <a href="/tool_matches/<%= tool_match.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @tool_matches, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
