<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All machines
    </h1>

    <a href="/machines/new" class="btn btn-block btn-outline-secondary">
      Add a new machine
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Price
        </th>

        <th>
          Service
        </th>

        <th>
          Photo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @machines.each do |machine| %>
      <tr>
        <!-- Display machine.id start -->
        <td>
          <%= machine.id %>
        </td>
        <!-- Display machine.id end -->

        <!-- Display machine.name start -->
        <td>
          <%= machine.name %>
        </td>
        <!-- Display machine.name end -->

        <!-- Display machine.price start -->
        <td>
          <%= machine.price %>
        </td>
        <!-- Display machine.price end -->

        <!-- Display machine.service start -->
        <td>
          <%= machine.service %>
        </td>
        <!-- Display machine.service end -->

        <!-- Display machine.photo start -->
        <td>
          <img src='<%= machine.photo %>' class='img-fluid'>
        </td>
        <!-- Display machine.photo end -->

        <!-- Display machine.created_at start -->
        <td>
          <%= time_ago_in_words(machine.created_at) %> ago
        </td>
        <!-- Display machine.created_at end -->

        <!-- Display machine.updated_at start -->
        <td>
          <%= time_ago_in_words(machine.updated_at) %> ago
        </td>
        <!-- Display machine.updated_at end -->

        <td>
          <a href="/machines/<%= machine.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @machines, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
