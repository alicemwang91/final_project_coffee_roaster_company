<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All machines
    </h1>

    <a href="/machines/new" class="btn btn-block btn-outline-secondary">
      Add a new machine
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "machine_templates/machines_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Price
        </th>

        <th>
          Service
        </th>

        <th>
          Photo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @machines.each do |machine| %>
      <tr>
        <td>
          <%= machine.id %>
        </td>

        <td>
          <%= machine.name %>
        </td>

        <td>
          <%= machine.price %>
        </td>

        <td>
          <%= machine.service %>
        </td>

        <td>
          <img src='<%= machine.photo %>' class='img-fluid'>
        </td>

        <td>
          <%= time_ago_in_words(machine.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(machine.updated_at) %> ago
        </td>

        <td>
          <a href="/machines/<%= machine.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @machines, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
