<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Beans

    <a data-toggle="collapse" href="#machine_beans_new_form">
      Add bean
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @machine.beans.each do |bean| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/beans/<%= bean.id %>">
          <%= bean.origin %>
        </a>

        <a href="/delete_bean_from_recommended_machine/<%= bean.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="machine_beans_new_form">
        <%= render partial: "machine_templates/machine_beans_new_form" %>
      </div>
    </div>

  </ul>
</div>
