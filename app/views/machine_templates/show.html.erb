<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Machine #<%= @machine.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/machines" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/machines/<%= @machine.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit machine
        </a>
      </div>

      <div class="col">
        <a href="/delete_machine/<%= @machine.id %>" class="btn btn-block btn-outline-secondary">
          Delete machine
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @machine.name %>
      </dd>

      <dt>
        Price
      </dt>
      <dd>
        <%= @machine.price %>
      </dd>

      <dt>
        Service
      </dt>
      <dd>
        <%= @machine.service %>
      </dd>

      <dt>
        Photo
      </dt>
      <dd>
        <img src="<%= @machine.photo %>" class="img-fluid">
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@machine.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@machine.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "machine_templates/machine_beans" %>
  </div>
</div>
