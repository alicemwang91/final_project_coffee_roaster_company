<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Tool Matches

    <a data-toggle="collapse" href="#tool_tool_matches_new_form">
      Add tool match
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @tool.tool_matches.each do |tool_match| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/tool_matches/<%= tool_match.id %>">
          <%= tool_match.beans_id %>
        </a>

        <a href="/delete_tool_match_from_tools/<%= tool_match.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="tool_tool_matches_new_form">
        <%= render partial: "tool_templates/tool_tool_matches_new_form" %>
      </div>
    </div>

  </ul>
</div>
