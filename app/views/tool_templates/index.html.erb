<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All tools
    </h1>

    <a href="/tools/new" class="btn btn-block btn-outline-secondary">
      Add a new tool
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Price
        </th>

        <th>
          Photo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @tools.each do |tool| %>
      <tr>
        <!-- Display tool.id start -->
        <td>
          <%= tool.id %>
        </td>
        <!-- Display tool.id end -->

        <!-- Display tool.name start -->
        <td>
          <%= tool.name %>
        </td>
        <!-- Display tool.name end -->

        <!-- Display tool.price start -->
        <td>
          <%= tool.price %>
        </td>
        <!-- Display tool.price end -->

        <!-- Display tool.photo start -->
        <td>
          <img src='<%= tool.photo %>' class='img-fluid'>
        </td>
        <!-- Display tool.photo end -->

        <!-- Display tool.created_at start -->
        <td>
          <%= time_ago_in_words(tool.created_at) %> ago
        </td>
        <!-- Display tool.created_at end -->

        <!-- Display tool.updated_at start -->
        <td>
          <%= time_ago_in_words(tool.updated_at) %> ago
        </td>
        <!-- Display tool.updated_at end -->

        <td>
          <a href="/tools/<%= tool.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
