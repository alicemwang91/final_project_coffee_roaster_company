<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Bookmarks

    <a data-toggle="collapse" href="#blogpost_bookmarks_new_form">
      Add bookmark
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @blogpost.bookmarks.each do |bookmark| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/bookmarks/<%= bookmark.id %>">
          <%= bookmark.user_id %>
        </a>

        <a href="/delete_bookmark_from_blogpost/<%= bookmark.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="blogpost_bookmarks_new_form">
        <%= render partial: "blogpost_templates/blogpost_bookmarks_new_form" %>
      </div>
    </div>

  </ul>
</div>
