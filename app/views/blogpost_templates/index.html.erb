<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All blogposts
    </h1>

    <a href="/blogposts/new" class="btn btn-block btn-outline-secondary">
      Add a new blogpost
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Caption
        </th>

        <th>
          Image
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @blogposts.each do |blogpost| %>
      <tr>
        <!-- Display blogpost.id start -->
        <td>
          <%= blogpost.id %>
        </td>
        <!-- Display blogpost.id end -->

        <!-- Display blogpost.caption start -->
        <td>
          <%= blogpost.caption %>
        </td>
        <!-- Display blogpost.caption end -->

        <!-- Display blogpost.image start -->
        <td>
          <img src='<%= blogpost.image %>' class='img-fluid'>
        </td>
        <!-- Display blogpost.image end -->

        <!-- Display blogpost.user_id start -->
        <td>
          <%= blogpost.user_id %>
        </td>
        <!-- Display blogpost.user_id end -->

        <!-- Display blogpost.created_at start -->
        <td>
          <%= time_ago_in_words(blogpost.created_at) %> ago
        </td>
        <!-- Display blogpost.created_at end -->

        <!-- Display blogpost.updated_at start -->
        <td>
          <%= time_ago_in_words(blogpost.updated_at) %> ago
        </td>
        <!-- Display blogpost.updated_at end -->

        <td>
          <a href="/blogposts/<%= blogpost.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
