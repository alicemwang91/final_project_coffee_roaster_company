<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All blogposts
    </h1>

    <a href="/blogposts/new" class="btn btn-block btn-outline-secondary">
      Add a new blogpost
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "blogpost_templates/blogposts_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Caption
        </th>

        <th>
          Image
        </th>

        <th>
          User
        </th>

        <th>
          Body
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @blogposts.each do |blogpost| %>
      <tr>
        <td>
          <%= blogpost.id %>
        </td>

        <td>
          <%= blogpost.caption %>
        </td>

        <td>
          <img src='<%= blogpost.image %>' class='img-fluid'>
        </td>

        <td>
          <% if blogpost.user.present? %>
            <a href="/users/<%= blogpost.user.id %>">
              <%= blogpost.user.username %>
            </a>
          <% end %>
        </td>

        <td>
          <%= blogpost.body %>
        </td>

        <td>
          <%= time_ago_in_words(blogpost.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(blogpost.updated_at) %> ago
        </td>

        <td>
          <a href="/blogposts/<%= blogpost.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @blogposts, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
