<!-- Form bookmark start -->
<form action="/create_bookmark_from_blogpost" method="post">
<!-- Form bookmark end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :username, @bookmark.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for blogpost_id start -->
  <!-- Input for blogpost_id start -->
  <input type="hidden" name="blogpost_id" value="<%= @blogpost.id %>">
  <!-- Input for blogpost_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create bookmark
  </button>
</form>
