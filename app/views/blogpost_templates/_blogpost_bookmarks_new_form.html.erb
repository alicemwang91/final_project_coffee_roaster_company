<!-- Form bookmark start -->
<form action="/create_bookmark_from_blogpost" method="post">
<!-- Form bookmark end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @bookmark.user_id %>">
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for blogpost_id start -->
  <!-- Input for blogpost_id start -->
  <input type="hidden" name="blogpost_id" value="<%= @blogpost.id %>">
  <!-- Input for blogpost_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create bookmark
  </button>
</form>
