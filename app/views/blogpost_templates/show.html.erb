<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Blogpost #<%= @blogpost.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/blogposts" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/blogposts/<%= @blogpost.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit blogpost
        </a>
      </div>

      <div class="col">
        <a href="/delete_blogpost/<%= @blogpost.id %>" class="btn btn-block btn-outline-secondary">
          Delete blogpost
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Caption
      </dt>
      <dd>
        <%= @blogpost.caption %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <img src="<%= @blogpost.image %>" class="img-fluid">
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <% if @blogpost.user.present? %>
          <a href="/users/<%= @blogpost.user_id %>">
            <%= @blogpost.user.username %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@blogpost.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@blogpost.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "blogpost_templates/blogpost_bookmarks" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "blogpost_templates/blogpost_comments" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "blogpost_templates/blogpost_bookmarked_users" %>
  </div>
</div>
