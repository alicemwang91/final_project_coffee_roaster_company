<% if @blogpost.present? %>
  <% if @blogpost.errors.any? %>
    <% @blogpost.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new blogpost
</h1>


<hr>

<form action="/create_blogpost" method="post" enctype="multipart/form-data">

  <div class="form-group">
    <label for="caption">
      Caption
    </label>

    <textarea id="caption" name="caption" class="form-control" rows="3"><%= @blogpost.caption %></textarea>
  </div>

  <div class="form-group">
    <label for="image">
      Image
    </label>

    <input type="file" id="image" name="image" class="form-control">
  </div>

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :username, @blogpost.user_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="body">
      Body
    </label>

    <textarea id="body" name="body" class="form-control" rows="3"><%= @blogpost.body %></textarea>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create blogpost
  </button>
</form>

<hr>

<a href="/blogposts">
  Go back
</a>
