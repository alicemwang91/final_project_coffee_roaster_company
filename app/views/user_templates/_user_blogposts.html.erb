<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Blogposts

    <a data-toggle="collapse" href="#user_blogposts_new_form">
      Add blogpost
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.blogposts.each do |blogpost| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/blogposts/<%= blogpost.id %>">
          <%= blogpost.caption %>
        </a>

        <a href="/delete_blogpost_from_user/<%= blogpost.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_blogposts_new_form">
        <%= render partial: "user_templates/user_blogposts_new_form" %>
      </div>
    </div>

  </ul>
</div>
