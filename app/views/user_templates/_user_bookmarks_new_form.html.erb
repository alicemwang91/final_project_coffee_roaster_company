<!-- Form bookmark start -->
<form action="/create_bookmark_from_user" method="post">
<!-- Form bookmark end -->

  <!-- Label and input for user_id start -->
  <!-- Input for user_id start -->
  <input type="hidden" name="user_id" value="<%= @user.id %>">
  <!-- Input for user_id end -->

  <!-- Label and input for blogpost_id start -->
  <div class="form-group">
    <label for="blogpost_id">
      Blogpost
    </label>

    <!-- Input for blogpost_id start -->
    <%= select_tag(:blogpost_id, options_from_collection_for_select(Blogpost.all, :id, :caption, @bookmark.blogpost_id), :class => "form-control") %>
    <!-- Input for blogpost_id end -->
  </div>
  <!-- Label and input for blogpost_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create bookmark
  </button>
</form>
