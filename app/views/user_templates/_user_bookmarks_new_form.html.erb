<form action="/create_bookmark_from_user" method="post">

  <input type="hidden" name="user_id" value="<%= @user.id %>">

  <div class="form-group">
    <label for="blogpost_id">
      Blogpost
    </label>

    <%= select_tag(:blogpost_id, options_from_collection_for_select(Blogpost.all, :id, :caption, @bookmark.blogpost_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create bookmark
  </button>
</form>
