<form action="/create_comment_from_user" method="post">

  <input type="hidden" name="user_id" value="<%= @user.id %>">

  <div class="form-group">
    <label for="body">
      Body
    </label>

    <textarea id="body" name="body" class="form-control" rows="3"><%= @comment.body %></textarea>
  </div>

  <div class="form-group">
    <label for="blogpost_id">
      Blogpost
    </label>

    <%= select_tag(:blogpost_id, options_from_collection_for_select(Blogpost.all, :id, :caption, @comment.blogpost_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create comment
  </button>
</form>
